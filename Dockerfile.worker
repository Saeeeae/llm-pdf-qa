FROM python:3.10-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Install Python dependencies (no MinerU)
COPY requirements/ ./requirements/
RUN pip install --no-cache-dir -r requirements/worker.txt

EXPOSE 8000

# Copy application code
COPY app/ ./app/

ENV PYTHONPATH=/app

# Default: run Celery worker
CMD ["celery", "-A", "app.tasks.celery_app", "worker", "--loglevel=info", "-Q", "default,ingest,sync", "--concurrency=2"]
